.PHONY: all clean install install-strip examples

INCLUDES = @INCLUDES@
LIBRARY = libmeasurementkit-objectivec.a
OBJS = mk_task.o
PREFIX = @PREFIX@

WARNINGS = -Wall -Wextra
#FFLAGS = -fsanitize=address -fobjc-arc
FFLAGS = -fobjc-arc
COMPILE = $(CC) $(CPPFLAGS) $(CFLAGS) $(WARNINGS) $(FFLAGS) $(INCLUDES)
COMPILEXX = $(CXX) -std=c++11 $(CPPFLAGS) $(CXXFLAGS) $(WARNINGS) $(FFLAGS) $(INCLUDES)
LINK = $(CXX) $(FFLAGS) -framework Foundation -lmeasurement_kit

all: $(LIBRARY)

$(LIBRARY): $(OBJS)
	$(AR) rv $(LIBRARY) $(OBJS)
mk_task.o: mk_task.h mk_task.mm
	$(COMPILEXX) -o mk_task.o -c mk_task.mm

install: $(LIBRARY)
	install -d $(DESTDIR)/$(PREFIX)/include
	install -m644 mk_task.h $(DESTDIR)/$(PREFIX)/include
	install -d $(DESTDIR)/$(PREFIX)/lib
	install -m644 $(LIBRARY) $(DESTDIR)/$(PREFIX)/lib

# TODO(bassosimone): understand why `install -s` fails. Until this point, just
# keep install-strip as an alias to install.
install-strip: install

EXAMPLES = example_ndt_task example_web_connectivity_task
examples: $(EXAMPLES)

example_ndt_task.o: example_ndt_task.m
	$(COMPILE) -o example_ndt_task.o -c example_ndt_task.m
example_ndt_task: example_ndt_task.o $(LIBRARY)
	$(LINK) -o example_ndt_task example_ndt_task.o $(LIBRARY)

example_web_connectivity_task.o: example_web_connectivity_task.m
	$(COMPILE) -o example_web_connectivity_task.o -c example_web_connectivity_task.m
example_web_connectivity_task: example_web_connectivity_task.o $(LIBRARY)
	$(LINK) -o example_web_connectivity_task example_web_connectivity_task.o $(LIBRARY)

clean:
	rm -rf -- $(OBJS) $(LIBRARY) $(EXAMPLES)
